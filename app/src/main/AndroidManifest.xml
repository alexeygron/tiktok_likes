<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appls.tokall">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:name="com.appls.tokall.TokkallApp"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/dgd_res_app"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/wasm_conf"
        android:theme="@style/Main.Theme">

        <activity
            android:name="com.appls.tokall.view.activity.AppAuthActivityWasmScort"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.appls.tokall.view.activity.WasmScortMakeActivityWasmScort"
            android:label="@string/dgd_res_emp"
            android:screenOrientation="portrait"
            />

        <activity
            android:name="com.appls.tokall.view.activity.WasmScortNavActivityWasmScort"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.appls.tokall.view.activity.WasmScortBaseActivity" />
        <activity android:name="com.appls.tokall.view.activity.DemoReplacesActivity" />
        <activity android:name="com.appls.tokall.view.activity.CostAppActivityWasmScort" />
        <activity android:name="com.appls.tokall.view.activity.ListVorednActivityWasmScort" />
    </application>

</manifest>