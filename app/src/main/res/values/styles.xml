<resources>

    <style name="Main.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionBarStyle">@style/Main.Theme.Toolbar</item>

        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/status_bar</item>

    </style>

    <style name="Main.Theme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/toolbar_bg</item>
        <item name="android:titleTextStyle">@style/Main.TextAppearance.Widget.ActionBar.Title</item>
        <item name="android:subtitleTextStyle">@style/Main.TextAppearance.Widget.ActionBar.Subtitle</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:textColorPrimary">@color/status_bar</item>
    </style>

    <style name="Main.TextAppearance.Widget.ActionBar.Title" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Main.TextAppearance.Widget.ActionBar.Subtitle" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PriceBarIcon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/ic_empty_icon</item>
    </style>

    <style name="PriceBarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/liteGray</item>
        <item name="android:textSize">15.4sp</item>
    </style>

    <style name="AcceptButton">
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">76dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:background">@color/dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/accept_btn_selector</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TwoColumn">
        <item name="android:background">@color/pink</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="SctStarDialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:gravity">bottom</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="ColumnMarker">
        <item name="android:layout_width">93dp</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">22dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:background">@drawable/price_bg</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Main.Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Main.Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
