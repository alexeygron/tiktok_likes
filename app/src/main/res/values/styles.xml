<resources>

    <style name="Main.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dgd_res_colorPrimary</item>
        <item name="colorPrimaryDark">@color/dgd_res_colorPrimaryDark</item>
        <item name="colorAccent">@color/dgd_res_colorAccent</item>

        <item name="android:windowBackground">@color/dgd_res_white</item>
        <item name="android:actionBarStyle">@style/Main.Theme.Toolbar</item>

        <item name="android:statusBarColor">@color/dgd_res_status_bar</item>
        <item name="android:navigationBarColor">@color/dgd_res_status_bar</item>

    </style>

    <style name="Main.Theme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/dgd_res_toolbar_bg</item>
        <item name="android:titleTextStyle">@style/Main.TextAppearance.Widget.ActionBar.Title</item>
        <item name="android:subtitleTextStyle">@style/Main.TextAppearance.Widget.ActionBar.Subtitle</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:textColorPrimary">@color/dgd_res_status_bar</item>
    </style>

    <style name="Main.TextAppearance.Widget.ActionBar.Title" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/dgd_res_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Main.TextAppearance.Widget.ActionBar.Subtitle" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/dgd_res_dark</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="WasmPriceBarIcon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/wasm_scort_ic_empty_icon</item>
    </style>

    <style name="WasmPriceBarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/dgd_res_liteGray</item>
        <item name="android:textSize">15.4sp</item>
    </style>

    <style name="WasmAcceptButton">
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">76dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:background">@color/dgd_res_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/wasm_scort_accept_btn_selector</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="WasmTwoColumn">
        <item name="android:background">@color/dgd_res_pink</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="WasmSctStarDialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:gravity">bottom</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="WasmColumnMarker">
        <item name="android:layout_width">93dp</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">22dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/dgd_res_dark</item>
        <item name="android:background">@drawable/wasm_scort_price_bg</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Main.Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Main.Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
