<?xml version="1.0" encoding="utf-8"?>
<com.demo.tiktok_likes_new.view.custom.WasmScortConstraint xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.demo.tiktok_likes_new.view.custom.WasmScortImage
        android:id="@+id/close_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/wasm_scort_ic_close_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toStartOf="@+id/progressBar4"
        app:layout_constraintTop_toTopOf="parent" />


    <ProgressBar
        android:id="@+id/progressBar4"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="138dp"
        android:layout_height="138dp"
        android:background="@drawable/wasm_scort_histyory_procress_circle_shape"
        android:progressDrawable="@drawable/histyory_progress_bar"
        android:max="100"
        android:indeterminate="false"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="@+id/cardView"

        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="111dp"
        android:layout_height="111dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:elevation="0dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardElevation="0dp">

        <com.demo.tiktok_likes_new.view.custom.WasmScortImage
            android:id="@+id/photo"
            android:layout_width="111dp"
            android:layout_height="111dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/wasm_scort_load_screen_bg" />

    </androidx.cardview.widget.CardView>

    <com.demo.tiktok_likes_new.view.custom.WasmScortText
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="Montserrat"
        android:textColor="@color/wasm_scort_pink"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/progressBar4"
        app:layout_constraintStart_toStartOf="@+id/progressBar4"
        app:layout_constraintTop_toBottomOf="@+id/progressBar4"
        />

</com.demo.tiktok_likes_new.view.custom.WasmScortConstraint>